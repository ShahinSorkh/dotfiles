#!/usr/bin/env bash

TOUCHPAD_ID=$(xinput list | grep -i touchpad | grep -o -P '(?<=id=)[[:digit:]]+')
IS_ENABLED=$(xinput list-props "$TOUCHPAD_ID" | awk '/Device Enabled/ {print $NF}')

if [ "$IS_ENABLED" = "1" ]
then
    xinput disable "$TOUCHPAD_ID"
    notify-send 'Touchpad disabled'
else
    xinput enable "$TOUCHPAD_ID"
    notify-send 'Touchpad enabled'
fi
