[alias]
	ctags = !.git/hooks/ctags

	# cite: https://blog.jez.io/cli-code-review/
	# list files which have changed since REVIEW_BASE
	files = !git diff --name-only $(git merge-base HEAD \"${REVIEW_BASE-master}\")

	# cite: https://blog.jez.io/cli-code-review/
	# Same as the above, except specify names of files as arguments,
	# instead of opening all files:
	# git reviewone foo.js bar.js
	reviewone = !vim -p +\"tabdo Gvdiff ${REVIEW_BASE-master}\" +\"let g:gitgutter_diff_base = '${REVIEW_BASE-master}'\"

	# cite: https://blog.jez.io/cli-code-review/
	# Open all files changed since REVIEW_BASE in Vim tabs
	# Then, run fugitive's :Gdiff in each tab, and finally
	# tell vim-gitgutter to show +/- for changes since REVIEW_BASE
	review = !git reviewone $(git files)

[color]
	ui = always

[core]
	editor = vim
	eol = lf
	safecrlf = false
	autocrlf = false

[credential]
	helper = store

[diff]
	algorithm = histogram
	tool = vimdiff

[difftool]
	prompt = false

[init]
	templatedir = ~/.git_template

[merge]
	conflictstyle = diff3
	tool = vimdiff

[mergetool]
	prompt = false
	writeToTemp = true

[push]
	default = simple

[rebase]
	missingCommitsCheck = warn

[status]
	showStash = true

[submodule]
	fetchJobs = 0

