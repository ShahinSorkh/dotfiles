[core]
	editor = nvim
	eol = lf
	safecrlf = false
	autocrlf = false

[credential]
	helper = store

[diff]
	algorithm = histogram
	tool = vimdiff

[difftool]
	prompt = false

[init]
	templatedir = ~/.git_template
	defaultBranch = master

[merge]
	conflictstyle = diff3
	tool = vimdiff

[mergetool]
	prompt = false
	writeToTemp = true

[push]
	default = simple

[rebase]
	missingCommitsCheck = warn

[status]
	showStash = true

[submodule]
	fetchJobs = 0

